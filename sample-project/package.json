{
  "name": "sample-project",
  "license": "MIT",
  "scripts": {
    "test": "NODE_ENV=test jest --no-cache"
  },
  "dependencies": {
    "@rails/webpacker": "5.4.3",
    "stimulus": "^3.1.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "babel-jest": "^29.0.3",
    "jest": "^29.0.2",
    "jest-environment-jsdom": "^29.0.3",
    "webpack-dev-server": "^3"
  },
  "jest": {
    "testRegex": ".*_spec.js",
    "roots": [
      "<rootDir>",
      "<rootDir>/spec/javascript/jest"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/app/javascript/packs"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
